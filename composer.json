{
    "name": "tuxrampage/react-multiprocess-server",
    "description": "Handle react socket connections in multiple processes",
    "type": "library",
    "license": "LGPL",
    "authors": [
        {
            "name": "Axel Helmert",
            "email": "tux-rampage@users.noreply.github.com"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/tux-rampage/event-loop.git"
        }
    ],
    "require": {
        "php": "7.2",
        "ext-pcntl": "*",
        "ext-posix": "*",
        "react/socket": "^1.2.0",
        "react/event-loop": "dev-fork-support as 1.2.0"
    },
    "autoload": {
        "psr-4": {
            "React\\MultiProcess\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ReactTest\\MultiProcess\\": "test/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0"
    }
}
